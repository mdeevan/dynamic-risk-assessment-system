name: data_ingestion
# python_env: virtualenv
conda_env: ../../config/environment.yml

entry_points:
  main:
    parameters:

      in_path:
        description: in folder 
        type: string

      in_file:
        description: in filename
        type: string

      out_path:
        description: out folder
        type: string

      out_file:
        description: out filename
        type: string



    command: >-
        python run_data_ingestion.py  --in_path {in_path} \
                                      --in_file {in_file} \
                                      --out_path {out_path} \
                                      --out_file {out_file} 
