name: training
conda_env: ../../config/environment.yml

entry_points:
  main:
    parameters:

      in_path:
        description: folder containing for the source data  
        type: string

       in_file:
        description: soure data filename
        type: string

       out_path:
        description: folder to save the generated model
        type: string

       out_model:
        description: name to be used in saving the model
        type: string


    command: >-
        python training.py  --in_path {in_path} \
                            --in_file {in_file} \
                            --out_path {out_path} \
                            --out_model {out_model} 
